<div class="container">
    <div class="row">
        <div class="col mt-5">

        </div>
        <h2 class="text-center" style="color:white; font-family: Archivo Black; font-size: 2.5rem" >Question {{questionNumber}}</h2>
        <div class="row mt-5">
            <div class="col">
                <div class="card non-interactive">
                    <div class="card-text text-center" style="font-size: 3rem">
                        {{questionArray[questionCounter].question}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col m-4 ">
                <div class="card non-interactive" :class="{correct: isUserAnswer(questionArray[questionCounter].answers[0]) && isAnswered(), incorrect: isUserAnswer(questionArray[questionCounter].answers[0]) && !isAnswered(), corrected: questionArray[questionCounter].answers[0] == questionArray[questionCounter].correctAnswer }" @click="nextQuestion(questionArray[questionCounter].answers[0])">
                    <div class="card-text text-center p-5" style="font-size: 2.5rem">
                        {{questionArray[questionCounter].answers[0]}}
                    </div>
                </div>
                
            </div>
            <div class="col m-4">
                <div class="card non-interactive" :class="{correct: isUserAnswer(questionArray[questionCounter].answers[1]) && isAnswered(), incorrect: isUserAnswer(questionArray[questionCounter].answers[1]) && !isAnswered(), corrected: questionArray[questionCounter].answers[1] == questionArray[questionCounter].correctAnswer }" @click="nextQuestion(questionArray[questionCounter].answers[1])">
                    <div class="card-text text-center p-5" style="font-size: 2.5rem">
                        {{questionArray[questionCounter].answers[1]}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col m-4">
                <div class="card non-interactive" :class="{correct: isUserAnswer(questionArray[questionCounter].answers[2]) && isAnswered(), incorrect: isUserAnswer(questionArray[questionCounter].answers[2]) && !isAnswered(), corrected: questionArray[questionCounter].answers[2] == questionArray[questionCounter].correctAnswer }" @click="nextQuestion(questionArray[questionCounter].answers[2])">
                    <div class="card-text text-center p-5" style="font-size: 2.5rem">
                        {{questionArray[questionCounter].answers[2]}}
                    </div>
                </div>
                
            </div>
            <div class="col m-4">
                <div class="card non-interactive" :class="{correct: isUserAnswer(questionArray[questionCounter].answers[3]) && isAnswered(), incorrect: isUserAnswer(questionArray[questionCounter].answers[3]) && !isAnswered(), corrected: questionArray[questionCounter].answers[3] == questionArray[questionCounter].correctAnswer }" @click="nextQuestion(questionArray[questionCounter].answers[3])">
                    <div class="card-text text-center p-5" style="font-size: 2.5rem">
                        {{questionArray[questionCounter].answers[3]}}
                    </div>
                </div>
            </div>
        </div>
    <div class="row">
        <div class="m-5 col d-flex justify-content-center align-items-center">
            <button @click="previous" class="p-2 btn btn-primary me-5">
                Previous
            </button>
            <button @click="next" class="p-2 btn btn-primary">
                Next
            </button>
            
        </div>
    </div>
    <div class="row">
        <div class="col d-flex justify-content-center">
            <button @click="finish" class="p-3 btn btn-info">
                Play again!
            </button>
        </div>
    </div>

    
    
    </div>
    </div>
    
</div>